{
  "name": "shadow/shadow-orm",
  "description": "High-performance ORM layer for WordPress/WooCommerce",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "require": {
    "php": "^8.1",
    "yahnis-elsts/plugin-update-checker": "^5.6"
  },
  "require-dev": {
    "brain/monkey": "^2.6",
    "fakerphp/faker": "^1.24",
    "mockery/mockery": "^1.6",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^10.0",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "ShadowORM\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ShadowORM\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:unit": "phpunit --testsuite=unit",
    "test:integration": "phpunit --testsuite=integration",
    "phpstan": "phpstan analyse",
    "cs": "phpcs",
    "cs:fix": "phpcbf"
  },
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "8.1"
    }
  }
}
